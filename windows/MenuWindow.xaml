<Window x:Class="OOOCutlery.windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOOCutlery.windows"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Grid.Row="1" Margin="20">
            <Label Height="30" Content="Введите логин" Width="300" ></Label>
            <TextBox Height="30" Width="300" Name="LoginBox"></TextBox>
            <Label Height="30" Content="Введите пароль" Width="300" ></Label>
            <TextBox Height="30" Width="300" Name="PasswordBox"></TextBox>
        </StackPanel>
    </Grid>
</Window>
